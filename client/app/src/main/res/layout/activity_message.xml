<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="yields.client.activities.MessageActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/bottomLayout"
        android:showDividers="end"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/addImageButton"
            android:src="@drawable/camera_icon"
            android:background="#ffffff"
            android:layout_weight="0.52"
            android:onClick="onClickAddImage"
            android:nestedScrollingEnabled="false" />

        <EditText
            android:layout_width="311dp"
            android:layout_height="wrap_content"
            android:id="@+id/inputMessageField"
            android:inputType="text"
            android:hint="@string/inputMessageFieldHintString" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/sendButton"
            android:src="@drawable/send_icon"
            android:background="#00ffffff"
            android:layout_weight="0.04"
            android:layout_below="@+id/messageScrollLayout"
            android:layout_alignParentEnd="true"
            android:onClick="onSendMessage" />

    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/messageScrollLayout"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/bottomLayout" />

</RelativeLayout>
